# TCU API Client - Environment Configuration Example
# 
# Copy this file to .env and update with your actual values
# 
# @package    MBLogik\TCUAPIClient
# @author     Ombeni Aidani <developer@mblogik.com>
# @company    MBLogik
# @date       2025-01-09

##############################################################################
# TCU API CONFIGURATION
##############################################################################
TCU_API_BASE_URL=https://api.tcu.go.tz
TCU_API_USERNAME=your_username_here
TCU_API_SECURITY_TOKEN=your_security_token_here
TCU_API_TIMEOUT=30
TCU_API_RETRY_ATTEMPTS=3
TCU_API_RETRY_DELAY=1000

##############################################################################
# DATABASE CONFIGURATION
##############################################################################
DB_ENABLE_LOGGING=true
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=tcu_api_client
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_TABLE_PREFIX=tcu_

# For SQLite (alternative)
# DB_DRIVER=sqlite
# DB_DATABASE=/path/to/database.sqlite

##############################################################################
# CACHE CONFIGURATION
##############################################################################
CACHE_ENABLE=true
CACHE_DRIVER=file
CACHE_TTL=3600
CACHE_PREFIX=tcu_api_

##############################################################################
# LOGGING CONFIGURATION
##############################################################################
LOG_LEVEL=info
LOG_FILE=logs/tcu_api.log
LOG_MAX_FILES=30
LOG_ENABLE_CONSOLE=false

##############################################################################
# DEVELOPMENT SETTINGS
##############################################################################
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=Africa/Dar_es_Salaam

##############################################################################
# SECURITY SETTINGS
##############################################################################
ENCRYPT_API_LOGS=false
MASK_SENSITIVE_DATA=true
ENABLE_REQUEST_SIGNING=false